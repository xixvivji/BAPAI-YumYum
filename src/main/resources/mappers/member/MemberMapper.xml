<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.bapai.member.dao.MemberDao">

    <resultMap id="MemberResultMap" type="com.ssafy.bapai.member.dto.MemberDto">
        <id property="userId" column="user_id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="name" column="name"/>
        <result property="nickname" column="nickname"/>
        <result property="role" column="role"/>
        <result property="provider" column="provider"/>
        <result property="providerId" column="provider_id"/>
        <result property="birthYear" column="birth_year"/>
        <result property="gender" column="gender"/>
        <result property="height" column="height"/>
        <result property="weight" column="weight"/>
        <result property="activityLevel" column="activity_level"/>
        <result property="dietGoal" column="diet_goal"/>
        <result property="customTdee" column="custom_tdee"/>
        <result property="status" column="status"/>
        <result property="joinedAt" column="joined_at"/>
        <result property="lastLoginAt" column="last_login_at"/>
        <result property="isTempPassword" column="is_temp_password"/>
    </resultMap>

    <insert id="insertMember" parameterType="com.ssafy.bapai.member.dto.MemberDto">
        <selectKey keyProperty="userId" resultType="long" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>

        INSERT INTO member (
        username, password, email, name, nickname,
        height, weight, activity_level, diet_goal,
        birth_year, gender,
        role, provider, provider_id, joined_at, status
        ) VALUES (
        #{username}, #{password}, #{email}, #{name}, #{nickname},
        #{height}, #{weight}, #{activityLevel}, #{dietGoal},
        #{birthYear}, #{gender},
        #{role}, #{provider}, #{providerId}, NOW(), 'ACTIVE'
        )
    </insert>

    <insert id="insertWeightHistory">
        INSERT INTO weight_history (user_id, weight, recorded_at)
        VALUES (#{userId}, #{weight}, NOW())
    </insert>

    <select id="selectMemberByUsername" resultMap="MemberResultMap">
        SELECT *
        FROM member
        WHERE username = #{username}
    </select>

    <select id="selectMemberByEmail" resultMap="MemberResultMap">
        SELECT *
        FROM member
        WHERE email = #{email}
    </select>

    <select id="selectMemberById" resultMap="MemberResultMap">
        SELECT *
        FROM member
        WHERE user_id = #{userId}
    </select>

    <select id="selectMemberByUsernameAndEmail" resultMap="MemberResultMap">
        SELECT *
        FROM member
        WHERE username = #{username}
          AND email = #{email}
    </select>

    <select id="checkEmail" resultType="int">
        SELECT COUNT(*)
        FROM member
        WHERE email = #{email}
    </select>
    <select id="checkNickname" resultType="int">
        SELECT COUNT(*)
        FROM member
        WHERE nickname = #{nickname}
    </select>
    <select id="checkUsername" resultType="int">
        SELECT COUNT(*)
        FROM member
        WHERE username = #{username}
    </select>

    <select id="selectMemberDetail" resultType="com.ssafy.bapai.member.dto.MemberDto">
        SELECT user_id        AS userId,
               email,
               name,
               nickname,
               birth_year     AS birthYear,
               gender,
               height,
               weight,
               activity_level AS activityLevel,
               diet_goal      AS dietGoal,
               joined_at      AS joinedAt
        FROM member
        WHERE user_id = #{userId}
    </select>

    <update id="updateMember" parameterType="com.ssafy.bapai.member.dto.MemberDto">
        UPDATE member
        <set>
            <if test="nickname != null">nickname = #{nickname},</if>
            <if test="height != null">height = #{height},</if>
            <if test="weight != null">weight = #{weight},</if>
            <if test="activityLevel != null">activity_level = #{activityLevel},</if>
            <if test="dietGoal != null">diet_goal = #{dietGoal},</if>
            <if test="customTdee != null">custom_tdee = #{customTdee},</if>
            <if test="role != null">role = #{role},</if>
            <if test="status != null">status = #{status},</if>
            updated_at = NOW()
        </set>
        WHERE user_id = #{userId}
    </update>

    <update id="updatePassword">
        UPDATE member
        SET password         = #{password},
            is_temp_password = false,
            updated_at       = NOW()
        WHERE user_id = #{userId}
    </update>

    <update id="updateTempPassword">
        UPDATE member
        SET password         = #{password},
            is_temp_password = true,
            updated_at       = NOW()
        WHERE user_id = #{userId}
    </update>

    <update id="updateLastLogin">
        UPDATE member
        SET last_login_at = NOW()
        WHERE user_id = #{userId}
    </update>

    <update id="deleteMember">
        UPDATE member
        SET status = 'WITHDRAWN'
        WHERE user_id = #{userId}
    </update>

    <delete id="deleteRefreshToken">
        DELETE
        FROM refresh_token
        WHERE rt_key = #{userId}
    </delete>

</mapper>